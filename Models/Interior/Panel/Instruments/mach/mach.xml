<?xml version="1.0" encoding="ISO-8859-1"?> 

<PropertyList>

  <path>mach.ac</path>

  <animation>
    <object-name>fond</object-name>
    <object-name>face</object-name>
    <object-name>needle</object-name>

    <object-name>vitre</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/Nord-1405-Gerfaut-II/Models/Effects/Glass/glass</inherits-from>
    <object-name>vitre</object-name>
  </effect>
  
  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>vitre</object-name>
  </effect>
  
  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>needle</object-name>
    <emission>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
    </emission>
  </animation>

  <!-- Mach -->
  <animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>velocities/mach</property>
    <interpolation>
     <entry><ind> 0.0 </ind><dep>   0 </dep></entry>
     <entry><ind> 0.5 </ind><dep> 100 </dep></entry>
     <entry><ind> 0.9 </ind><dep> 180 </dep></entry>
     <entry><ind> 1.0 </ind><dep> 209 </dep></entry>
     <entry><ind> 1.3 </ind><dep> 259 </dep></entry>
     <entry><ind> 1.5 </ind><dep> 300 </dep></entry>
    </interpolation>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>
